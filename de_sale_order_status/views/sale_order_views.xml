<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Sale Order -->
        <record id="view_order_form_inherit" model="ir.ui.view">
            <field name="name">view.order.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="replace">
                    <field name="state" widget="statusbar" statusbar_visible="draft,sent,sale,booked"/>
                </xpath>
                <xpath expr="//button[@name='action_confirm']" position="after">
                    <button name="action_booking_confirm" id="action_booking_confirm" string="Booking Confirm" class="btn-primary" type="object" attrs="{'invisible': [('state', 'not in', ['draft','sale'])]}"/>
                </xpath>

            </field>
        </record>
        
         <record id="sale_order_view_search_inherit_quotation_inherit" model="ir.ui.view">
            <field name="name">sale.order.view.search.inherit.quotation.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.sale_order_view_search_inherit_quotation" />
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='sales']" position="replace">
                    <filter string="Reserved" name="sales" domain="[('state','in',['sale'])]"/>
                    <filter string="Booking Confirmed" name="booked" domain="[('state','in',['booked'])]"/>
                    <filter string="Booking Cancelled" name="booking_cancel" domain="[('state','in',['cancel'])]"/>
                </xpath>
            </field>
        </record>
        
    </data>
</odoo>